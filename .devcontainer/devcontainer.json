{
  "name": "Python 3.9",
  "build": {
    "dockerfile": "Dockerfile",
    "args": { 
      "VARIANT": "3.9"
    }
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "settings": { 
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python"
  ]
}
